<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <Button
        android:id="@+id/btn_c_baseAdapter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Custom BaseAdapter"
        android:textColor="#fff"
        android:onClick="performAction"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_c_arrayAdapter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Custom ArrayAdapter"
        android:textColor="#fff"
        android:layout_alignParentRight="true"
        android:onClick="performAction"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Custom CursorAdapter"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:onClick="performAction"
        android:id="@+id/btn_c_cursorAdapter" />

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Expendable List"
        android:textColor="#fff"
        android:onClick="performAction"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_Expandable"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/round_button"
        android:gravity="center_vertical|center_horizontal"
        android:text="Simple ArrayAdapter"
        android:textColor="#fff"
        android:id="@+id/btn_simple_ArrayAdapter"
        android:layout_alignParentLeft="true"
        android:onClick="performAction"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
